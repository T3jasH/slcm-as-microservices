{
    "env": {
        "node": true
    },
    "extends": [
        "eslint:recommend",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 9,
        "project": "./tsconfig.json",
        "tsconfigRootDir": "./course"
    },
    "rules": {
        "semi": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off"
    }
}
